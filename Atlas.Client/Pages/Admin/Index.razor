@layout AdminLayout
@page "/admin"
@attribute [Authorize(Policy = "Admin")]

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Home</li>
    </ol>
</nav>

<h3 class="mb-3">Admin</h3>

<div class="card mb-3" style="width: 15rem;">
    <div class="card-body">
        <i class="far fa-folder mr-2" style="font-size:1.5rem;"></i>
        <a href="/admin/categories">Categories</a>
    </div>
</div>

<div class="card mb-3" style="width: 15rem;">
    <div class="card-body">
        <i class="far fa-comments mr-2" style="font-size:1.5rem;"></i>
        <a href="/admin/forums">Forums</a>
    </div>
</div>

<div class="card mb-3" style="width: 15rem;">
    <div class="card-body">
        <i class="fas fa-lock mr-2" style="font-size:1.5rem;"></i>
        <a href="/admin/roles">Roles</a>
    </div>
</div>

<div class="card mb-3" style="width: 15rem;">
    <div class="card-body">
        <i class="fas fa-cog mr-2" style="font-size:1.5rem;"></i>
        <a href="/admin/settings">Settings</a>
    </div>
</div>

