@page "/admin/users/edit/{id:guid}"
@page "/admin/users/edit-by-identity-user-id/{identityUserId}"

@inherits Atles.Client.Pages.Admin.Users.EditPage

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">@Localizer["Home"]</a></li>
        <li class="breadcrumb-item"><a href="/admin/users">@Localizer["Users"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["Edit User"]</li>
    </ol>
</nav>

@if (Model == null)
{
    <Loading />
}
else
{
    <div class="row">
        <div class="col-md-6">
            <h3 class="mb-3">@Localizer["Edit User"]</h3>
        </div>
        <div class="col-md-6 text-right mb-3">
            <a href="/admin/users/activity/@Model.User.Id" class="btn btn-primary" role="button">@Localizer["Activity"]</a>
        </div>
    </div>

    <Form Model="Model.User" SubmitButtonText="Update" OnSubmit="@UpdateAsync" OnCancel="Cancel"></Form>

    <div>
        <a class="btn btn-outline-info mb-3" data-toggle="collapse" href="#info" role="button" aria-expanded="false" aria-controls="info">
            @Localizer["View Info"]
        </a>
        <div class="collapse" id="info">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label font-weight-bold">@Localizer["Status"]:</label>
                        <label class="control-label">@Model.Info.Status</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">@Localizer["User Id"]:</label>
                        <label class="control-label">@Model.Info.UserId</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">@Localizer["User Name"]:</label>
                        <label class="control-label">@Model.Info.UserName</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">@Localizer["Email"]:</label>
                        <label class="control-label">@Model.Info.Email</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">@Localizer["Email Confirmed"]:</label>
                        <label class="control-label">@Model.Info.EmailConfirmed</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">@Localizer["Phone Number"]:</label>
                        <label class="control-label">@Model.Info.PhoneNumber</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">@Localizer["Phone Number Confirmed"]:</label>
                        <label class="control-label">@Model.Info.PhoneNumberConfirmed</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">@Localizer["Two Factor Enabled"]:</label>
                        <label class="control-label">@Model.Info.TwoFactorEnabled</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">@Localizer["Lockout Enabled"]:</label>
                        <label class="control-label">@Model.Info.LockoutEnabled</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">@Localizer["Lockout End"]:</label>
                        <label class="control-label">@Model.Info.LockoutEnd</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">@Localizer["Access Failed Count"]:</label>
                        <label class="control-label">@Model.Info.AccessFailedCount</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <TargetEvents Id="Id"></TargetEvents>
}