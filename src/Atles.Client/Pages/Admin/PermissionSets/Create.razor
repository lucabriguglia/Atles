@page "/admin/permission-sets/create"

@inherits Atles.Client.Pages.Admin.PermissionSets.CreatePage

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">@Localizer["Home"]</a></li>
        <li class="breadcrumb-item"><a href="/admin/permission-sets">@Localizer["Permission Sets"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["Create New Permission Set"]</li>
    </ol>
</nav>

<h3 class="mb-3">@Localizer["Create New Permission Set"]</h3>

@if (Model == null)
{
    <Loading />
}
else
{
    <Form Model="Model" SubmitButtonText="@Localizer["Save"]" OnSubmit="@SaveAsync" OnCancel="@Cancel"></Form>
}