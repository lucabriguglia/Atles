@page "/admin/permission-sets/edit/{id:guid}"

@inherits Atles.Client.Pages.Admin.PermissionSets.EditPage

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">@Localizer["Home"]</a></li>
        <li class="breadcrumb-item"><a href="/admin/permission-sets">@Localizer["Permission Sets"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["Edit Permission Set"]</li>
    </ol>
</nav>

<h3 class="mb-3">@Localizer["Edit Permission Set"]</h3>

@if (Model == null)
{
    <Loading />
}
else
{
    <Form Model="Model" Button="@Localizer["Update"]" OnValidSubmit="@UpdateAsync"></Form>
    <TargetEvents Id="Id"></TargetEvents>
}