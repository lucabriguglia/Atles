@page "/admin/forums/create"
@page "/admin/forums/create/{categoryId:guid}"

@inherits Atles.Client.Pages.Admin.Forums.CreatePage

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">@Localizer["Home"]</a></li>
        <li class="breadcrumb-item"><a href="/admin/forums">@Localizer["Forums"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["Create New Forum"]</li>
    </ol>
</nav>

<h3 class="mb-3">@Localizer["Create New Forum"]</h3>

@if (Model == null)
{
    <Loading />
}
else
{
    <Form Model="Model" SubmitButtonText="@Localizer["Save"]" OnSubmit="@SaveAsync" OnCancel="@Cancel"></Form>
    <label @bind="@ErrorMessage"></label>
}