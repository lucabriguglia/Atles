@page "/admin/categories/edit/{id:guid}"

@inherits Atles.Client.Pages.Admin.Categories.EditPage

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">@Localizer["Home"]</a></li>
        <li class="breadcrumb-item"><a href="/admin/categories">@Localizer["Categories"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Localizer["Edit Category"]</li>
    </ol>
</nav>

<h3 class="mb-3">@Localizer["Edit Category"]</h3>

@if (Model == null)
{
    <Loading />
}
else
{
    <Form Model="Model" SubmitButtonText="@Localizer["Update"]" OnSubmit="@UpdateAsync" OnCancel="@Cancel"></Form>
    <TargetEvents Id="Id"></TargetEvents>
}