@inherits Atles.Client.Shared.ConfirmModalComponent

<form method="post">
    <div class="modal fade" id="@Id" tabindex="-1" role="dialog" aria-labelledby="@Id-title" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="@Id-title">@Title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="@Loc["Close"]">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Body
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Loc["Close"]</button>
                    <button type="submit" class="btn btn-@CssClass" data-dismiss="modal" id="@Id-confirm-modal-button" @onclick="OnClickCallback">@Button</button>
                </div>
            </div>
        </div>
    </div>
</form>